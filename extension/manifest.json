{
  "manifest_version": 3,
  "name": "BluTV Party",
  "version": "1.0",
  "description": "Watch BluTV content synchronously with friends",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.blutv.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.blutv.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 